<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.controlsfx.control.GridView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fai.example.demojavafx.controller.StudentController"
            prefHeight="800.0" prefWidth="600.0">

    <VBox spacing="8.0" alignment="TOP_LEFT" styleClass="vbox" AnchorPane.topAnchor="8.0" AnchorPane.leftAnchor="8.0">
        <Label text="First name" styleClass="label"/>
        <TextField fx:id="txtFirstName" styleClass="text-field"/>
        <Label text="Last name" styleClass="label"/>
        <TextField fx:id="txtLastName" styleClass="text-field"/>
        <Label text="Email" styleClass="label"/>
        <TextField fx:id="txtEmail" styleClass="text-field"/>
        <Label text="Id Class" styleClass="label"/>
        <TextField fx:id="txtIdClass" styleClass="text-field"/>
        <Button fx:id="btnAdd" text="Add" onMouseClicked="#onAddStudent" styleClass="button"/>
        <Label fx:id="lblMessage"></Label>
        <Label>Student Id</Label>
        <TextField fx:id="txtStudentId"></TextField>
        <Button text="Delete" fx:id="btnDelete" onMouseClicked="#onDeleteStudent"></Button>
        <Button text="Get" fx:id="btnGet" onMouseClicked="#onGetStudent"></Button>
        <Button text="Edit" fx:id="btnEdit" onMouseClicked="#onUpdateStudent"></Button>
        <Button text="Show All Data" fx:id="btnShowAll" onMouseClicked="#onShowAllData"></Button>
        <TableView fx:id="tableView"></TableView>
    </VBox>
</AnchorPane>
